# shorten long commands
abbr kc "kubectl"
abbr lg "lazygit"
abbr yy "yazi"
abbr ls "eza"
abbr cat "bat"

# new commands
alias exa="eza"
alias vim="nvim"
alias lf="yazi"
alias ranger="yazi"
alias jq="yq"
alias shred="rm -P"
alias view="nvim -R"
alias tree="eza --tree"
alias help="aichat -r shell:zsh"

# Colorize commands when possible.
alias ls="ls -G"
alias less="less -R"
alias grep="grep --color=auto"
alias diff="diff --color=auto"
