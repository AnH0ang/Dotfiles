# shorten long commands
abbr kc "kubectl"
abbr lg "lazygit"
abbr yy "yazi"

# new commands
abbr vim "nvim"
abbr jq "yq"
abbr shred "rm -P"
abbr view "nvim -R"
abbr tree "eza --tree"
abbr help "aichat -r shell:zsh"

# overwrite commands
abbr exa "eza"

# Colorize commands when possible.
abbr ls "ls -G"
abbr less "less -R"
abbr grep "grep --color=auto"
abbr diff "diff --color=auto"
